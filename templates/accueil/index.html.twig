{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}
{% block body %}
<div class="row">
{% for article in articles %}
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{article.image}}" alt="{{article.title}}">
    <div class="card-body">
      <h5 class="card-title">{{article.title}}</h5>
      <p class="date">Ajouté le{{article.createdAt | date("d/m/y")}}</p>
      </div>
      <div class="card-btn" style="padding:5;">
        
        <a href="{{ path('app_accueil_show', {'id':article.id})}}" class="btn btn-primary">DETAIL</a>
        {# <a href="/show/{{article.id}}" class="btn btn-primary">Détail</a> #}
        </div>
    
</div>
{% endfor %}
{% endblock %}
